@model IEnumerable<LojaPlusSize.Models.Produto>

@{
    ViewData["Title"] = "Bella Plus - Moda Plus Size";
}

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-5 fw-bold mb-4">Celebre sua beleza única</h1>
                <p class="lead mb-4">Moda plus size sofisticada que valoriza sua autoestima. Peças exclusivas feitas para corpos reais.</p>
                <a href="@Url.Action("Index", "Produto")" class="btn btn-primary-custom btn-lg">
                    Descobrir Coleção <i class="fas fa-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-image" style="background: linear-gradient(135deg, var(--rosa-terroso) 0%, var(--bege-rosado) 100%); border-radius: 20px; padding: 40px;">
                    <i class="fas fa-crown" style="font-size: 100px; color: white;"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Destaques -->
<section class="container mb-5">
    <h2 class="section-title">Peças em Destaque</h2>
    
    <div class="row g-4">
        @foreach (var produto in Model.Take(3))
        {
            <div class="col-lg-4 col-md-6">
                <div class="product-card h-100">
                    <img src="@produto.ImagemUrl" class="product-image" alt="@produto.Nome">
                    <div class="card-body p-4">
                        <h5 class="card-title fw-bold">@produto.Nome</h5>
                        <p class="card-text text-muted mb-3">@produto.Descricao</p>
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <span class="price-tag">R$ @produto.Preco.ToString("N2")</span>
                            <span class="badge bg-light text-dark">@produto.TamanhosDisponiveis</span>
                        </div>
                        <a href="@Url.Action("Details", "Produto", new { id = produto.Id })" class="btn btn-primary-custom w-100">
                            Ver Detalhes
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Benefícios -->
<section class="container mb-5">
    <div class="row g-4">
        <div class="col-md-4 text-center">
            <div class="p-4">
                <i class="fas fa-ruler-combined fa-2x mb-3" style="color: var(--rosa-terroso);"></i>
                <h5>Modelos Inclusivos</h5>
                <p class="text-muted">Do 42 ao 60, pensados para seu conforto</p>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="p-4">
                <i class="fas fa-gem fa-2x mb-3" style="color: var(--rosa-terroso);"></i>
                <h5>Qualidade Premium</h5>
                <p class="text-muted">Tecidos selecionados que valorizam seu corpo</p>
            </div>
        </div>
        <div class="col-md-4 text-center">
            <div class="p-4">
                <i class="fas fa-truck fa-2x mb-3" style="color: var(--rosa-terroso);"></i>
                <h5>Entrega Rápida</h5>
                <p class="text-muted">Receba em casa com segurança e agilidade</p>
            </div>
        </div>
    </div>
</section>