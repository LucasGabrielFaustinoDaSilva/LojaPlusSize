    ViewData["Title"] = "Sobre Nós";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h1 class="section-title">💖 Sobre a Bella Plus</h1>
            
            <div class="product-card p-4 mb-4">
                <h3 class="mb-3">Nossa Missão</h3>
                <p class="lead">
                    A <strong>Bella Plus</strong> nasceu da necessidade de oferecer moda de qualidade 
                    para mulheres reais. Acreditamos que toda mulher merece se sentir linda, confiante e 
                    confortável em suas roupas, independente do tamanho.
                </p>
            </div>

            <div class="row g-4">
                <div class="col-md-6">
                    <div class="product-card p-4 h-100">
                        <h5 class="mb-3">🌟 Nossos Valores</h5>
                        <ul class="list-unstyled">
                            <li class="mb-2">✅ <strong>Inclusividade:</strong> Tamanhos do 42 ao 60</li>
                            <li class="mb-2">✅ <strong>Qualidade:</strong> Tecidos que duram</li>
