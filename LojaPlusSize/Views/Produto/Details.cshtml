@model LojaPlusSize.Models.Produto

@{
    ViewData["Title"] = Model.Nome;
}

<div class="container mt-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")" class="text-decoration-none">Início</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Produto")" class="text-decoration-none">Coleção</a></li>
            <li class="breadcrumb-item active">@Model.Nome</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Imagem do Produto -->
        <div class="col-lg-6 mb-4">
            <div class="product-card p-3">
                <img src="@Model.ImagemUrl" class="img-fluid rounded" alt="@Model.Nome" 
                     style="width: 100%; height: 500px; object-fit: cover;">
            </div>
        </div>

        <!-- Informações do Produto -->
        <div class="col-lg-6">
            <div class="product-card p-4">
                <h1 class="h2 fw-bold mb-3">@Model.Nome</h1>
                <p class="lead text-muted mb-4">@Model.Descricao</p>

                <!-- Preço -->
                <div class="mb-4">
                    <span class="price-tag fs-4">R$ @Model.Preco.ToString("N2")</span>
                    <span class="text-muted ms-2">ou 6x de R$ @((Model.Preco / 6).ToString("N2"))</span>
                </div>

                <!-- Tamanhos -->
                <div class="mb-4">
                    <h6 class="fw-bold mb-3">Selecione o tamanho:</h6>
                    <div class="d-flex flex-wrap gap-2">
                        @foreach (var tamanho in Model.TamanhosDisponiveis.Split(','))
                        {
                            <label class="btn btn-outline-primary rounded-pill">
                                <input type="radio" name="tamanho" value="@tamanho.Trim()" class="d-none">
                                @tamanho.Trim()
                            </label>
                        }
                    </div>
                </div>

                <!-- Status -->
                <div class="mb-4">
                    @if (Model.EmEstoque)
                    {
                        <div class="d-flex align-items-center text-success">
                            <i class="fas fa-check-circle me-2"></i>
                            <span class="fw-bold">Disponível em estoque</span>
                        </div>
                    }
                    else
                    {
                        <div class="d-flex align-items-center text-danger">
                            <i class="fas fa-times-circle me-2"></i>
                            <span class="fw-bold">Fora de estoque</span>
                        </div>
                    }
                </div>

                <!-- Botões de Ação -->
                <div class="mb-4">
                    @if (Model.EmEstoque)
                    {
                        <form method="post" asp-controller="Carrinho" asp-action="Adicionar" class="mb-3">
                            <input type="hidden" name="produtoId" value="@Model.Id" />
                            <input type="hidden" name="tamanho" value="44" id="selectedTamanho" />
                            <button type="submit" class="btn btn-primary-custom btn-lg w-100 py-3">
                                <i class="fas fa-shopping-cart me-2"></i>Adicionar ao Carrinho
                            </button>
                        </form>
                    }
                    else
                    {
                        <button class="btn btn-secondary btn-lg w-100 py-3" disabled>
                            <i class="fas fa-bell me-2"></i>Avise-me quando chegar
                        </button>
                    }

                    <div class="d-flex gap-2 mt-3">
                        <button class="btn btn-outline-primary flex-fill py-2">
                            <i class="fas fa-heart me-2"></i>Favoritar
                        </button>
                        <button class="btn btn-outline-primary flex-fill py-2">
                            <i class="fas fa-share-alt me-2"></i>Compartilhar
                        </button>
                    </div>
                </div>

                <!-- Informações Adicionais -->
                <div class="border-top pt-4">
                    <div class="accordion" id="produtoAccordion">
                        <div class="accordion-item border-0">
                            <h6 class="accordion-header">
                                <button class="accordion-button bg-transparent fw-bold" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#descricaoCollapse">
                                    <i class="fas fa-info-circle me-2"></i>Descrição Detalhada
                                </button>
                            </h6>
                            <div id="descricaoCollapse" class="accordion-collapse collapse show">
                                <div class="accordion-body text-muted">
                                    <p>@Model.Descricao</p>
                                    <ul class="list-unstyled">
                                        <li><i class="fas fa-check text-success me-2"></i>Composição: 95% Algodão, 5% Elastano</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Modelo veste tamanho 48</li>
                                        <li><i class="fas fa-check text-success me-2"></i>Instruções de lavagem: Lavar à mão</li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                        <div class="accordion-item border-0">
                            <h6 class="accordion-header">
                                <button class="accordion-button collapsed bg-transparent fw-bold" type="button" 
                                        data-bs-toggle="collapse" data-bs-target="#entregaCollapse">
                                    <i class="fas fa-truck me-2"></i>Entrega e Devolução
                                </button>
                            </h6>
                            <div id="entregaCollapse" class="accordion-collapse collapse">
                                <div class="accordion-body text-muted">
                                    <p><strong>Frete Grátis</strong> para compras acima de R$ 199</p>
                                    <p>Entregamos para todo Brasil em até 10 dias úteis</p>
                                    <p>Devolução gratuita em até 30 dias</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Seleção de tamanhos
        document.querySelectorAll('input[name="tamanho"]').forEach(radio => {
            radio.addEventListener('change', function() {
                // Remove active de todos os botões
                document.querySelectorAll('.btn-outline-primary').forEach(btn => {
                    btn.classList.remove('active');
                });
                
                // Adiciona active no botão selecionado
                this.parentElement.classList.add('active');
                
                // Atualiza o campo hidden
                document.getElementById('selectedTamanho').value = this.value;
            });
        });

        // Seleciona o primeiro tamanho por padrão
        document.querySelector('input[name="tamanho"]').checked = true;
        document.querySelector('input[name="tamanho"]').parentElement.classList.add('active');
        document.getElementById('selectedTamanho').value = document.querySelector('input[name="tamanho"]').value;
    </script>
}