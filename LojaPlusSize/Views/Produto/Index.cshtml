@model IEnumerable<LojaPlusSize.Models.Produto>

@{
  ViewData["Title"] = "Todos os Produtos";
}

<div class="container mt-4">
  <div class="row mb-4">
    <div class="col-12">
      <h1 class="section-title">ðŸ‘— Nossa ColeÃ§Ã£o Completa</h1>
      <p class="text-center lead">Encontre looks perfeitos para vocÃª!</p>
    </div>
  </div>

  <div class="row">
    @foreach (var produto in Model)
    {
      <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
        <div class="product-card h-100">
          <img src="@produto.ImagemUrl" class="product-image" alt="@produto.Nome">
          <div class="card-body p-3">
            <h5 class="card-title fw-bold">@produto.Nome</h5>
            <p class="card-text text-muted small mb-2">@produto.Descricao</p>
            <p class="card-text mb-2">
              <strong class="text-primary">Tamanhos:</strong>
              <span class="badge bg-light text-dark">@produto.TamanhosDisponiveis</span>
            </p>
            <p class="card-text mb-3">
              @if (produto.EmEstoque)
              {
                <span class="badge bg-success">Em Estoque</span>
              }
              else
              {
                <span class="badge bg-danger">Fora de Estoque</span>
              }
            </p>
          </div>
          <div class="card-footer bg-transparent">
            <div class="d-flex justify-content-between align-items-center">
              <span class="price-tag">R$ @produto.Preco.ToString("N2")</span>
              <a href="@Url.Action("Details", "Produto", new { id = produto.Id })"
                class="btn btn-primary-custom btn-sm">Ver Detalhes</a>
            </div>
          </div>
        </div>
      </div>
    }
  </div>

  @if (!Model.Any())
  {
    <div class="text-center py-5">
      <i class="fas fa-search fa-3x text-muted mb-3"></i>
      <h3>Nenhum produto encontrado</h3>
      <p class="text-muted">Em breve teremos novidades!</p>
    </div>
  }
</div>